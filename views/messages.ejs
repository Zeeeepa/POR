<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= project.config.name %> - Messages | Depla Project Manager</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
  <style>
    .message-card {
      transition: all 0.2s;
    }
    .message-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    .status-badge {
      position: absolute;
      top: 10px;
      right: 10px;
    }
    pre {
      background-color: #f8f9fa;
      padding: 10px;
      border-radius: 5px;
      max-height: 200px;
      overflow-y: auto;
    }
    .connection-status {
      display: inline-flex;
      align-items: center;
      font-size: 0.875rem;
    }
    .status-indicator {
      width: 10px;
      height: 10px;
      border-radius: 50%;
      margin-right: 6px;
    }
    .status-connected {
      background-color: #198754;
    }
    .status-disconnected {
      background-color: #dc3545;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">Depla Project Manager</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Dashboard</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/projects">Projects</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/settings">Settings</a>
          </li>
        </ul>
        <div class="dropdown">
          <button class="btn btn-outline-light dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown">
            <i class="bi bi-person-circle"></i> User
          </button>
          <ul class="dropdown-menu dropdown-menu-end">
            <li><a class="dropdown-item" href="#">Profile</a></li>
            <li><a class="dropdown-item" href="#">Preferences</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="#">Logout</a></li>
          </ul>
        </div>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="/projects/<%= project.config.name %>"><%= project.config.name %></a></li>
        <li class="breadcrumb-item active">Messages</li>
      </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1><%= project.config.name %> - Messages</h1>
      <div class="d-flex align-items-center">
        <div class="connection-status me-3">
          <span class="status-indicator status-connected"></span>
          WSL2 Connected
        </div>
        <form action="/projects/<%= project.config.name %>/messages/send-all" method="POST">
          <button type="submit" class="btn btn-success">
            <i class="bi bi-play-fill"></i> Send All
          </button>
        </form>
      </div>
    </div>

    <!-- Message Queue -->
    <div class="card mb-4">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Message Queue</h5>
        <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addMessageModal">
          <i class="bi bi-plus-lg"></i> Add Message
        </button>
      </div>
      <div class="card-body">
        <% if (project.messages.filter(m => m.status === 'Ready to Send').length === 0) { %>
          <p class="text-center text-muted my-4">No messages in queue</p>
        <% } else { %>
          <div class="row row-cols-1 row-cols-md-2 g-4">
            <% project.messages.filter(m => m.status === 'Ready to Send').forEach((message, index) => { %>
              <div class="col">
                <div class="card message-card">
                  <div class="card-body">
                    <span class="badge bg-primary status-badge">Ready to Send</span>
                    <h5 class="card-title"><%= index + 1 %>. <%= message.module_name %></h5>
                    <p class="card-text">Module Path: <%= message.module_path %></p>
                    <div class="mb-2">
                      <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#details<%= message.id %>">
                        Show Details
                      </button>
                    </div>
                    <div class="collapse" id="details<%= message.id %>">
                      <div class="card card-body mb-3">
                        <h6>Implementation Query:</h6>
                        <p class="mb-3"><%= message.implementation_query %></p>
                        
                        <% if (message.implementation_details && message.implementation_details.length > 0) { %>
                          <h6>Implementation Details:</h6>
                          <ul class="mb-3">
                            <% message.implementation_details.forEach(detail => { %>
                              <li><%= detail %></li>
                            <% }); %>
                          </ul>
                        <% } %>
                        
                        <% if (message.key_functions && message.key_functions.length > 0) { %>
                          <h6>Key Functions:</h6>
                          <ul class="mb-3">
                            <% message.key_functions.forEach(func => { %>
                              <li><strong><%= func.name %></strong>: <%= func.description %></li>
                            <% }); %>
                          </ul>
                        <% } %>
                      </div>
                    </div>
                    <div class="d-flex justify-content-between">
                      <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#editMessageModal<%= message.id %>">
                        <i class="bi bi-pencil"></i> Edit
                      </button>
                      <form action="/projects/<%= project.config.name %>/messages/<%= message.id %>/send" method="POST">
                        <button type="submit" class="btn btn-sm btn-success">
                          <i class="bi bi-send"></i> Send
                        </button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
        <% } %>
      </div>
    </div>

    <!-- Sent Messages -->
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">Sent Messages</h5>
      </div>
      <div class="card-body">
        <% if (project.messages.filter(m => m.status === 'Sent').length === 0) { %>
          <p class="text-center text-muted my-4">No sent messages</p>
        <% } else { %>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Module Name</th>
                  <th>Module Path</th>
                  <th>Sent At</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% project.messages.filter(m => m.status === 'Sent').forEach(message => { %>
                  <tr>
                    <td><%= message.module_name %></td>
                    <td><%= message.module_path %></td>
                    <td><%= new Date(message.sentAt).toLocaleString() %></td>
                    <td><span class="badge bg-success">Completed</span></td>
                    <td>
                      <button class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#viewMessageModal<%= message.id %>">
                        <i class="bi bi-eye"></i> View
                      </button>
                      <form class="d-inline" action="/projects/<%= project.config.name %>/messages/<%= message.id %>/resend" method="POST">
                        <button type="submit" class="btn btn-sm btn-outline-primary ms-1">
                          <i class="bi bi-arrow-repeat"></i> Resend
                        </button>
                      </form>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Add Message Modal -->
  <div class="modal fade" id="addMessageModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Add New Message</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form action="/projects/<%= project.config.name %>/messages/add" method="POST">
          <div class="modal-body">
            <div class="mb-3">
              <label for="module_name" class="form-label">Module Name</label>
              <input type="text" class="form-control" id="module_name" name="module_name" required>
            </div>
            <div class="mb-3">
              <label for="module_path" class="form-label">Module Path</label>
              <input type="text" class="form-control" id="module_path" name="module_path" required>
            </div>
            <div class="mb-3">
              <label for="implementation_query" class="form-label">Implementation Query</label>
              <textarea class="form-control" id="implementation_query" name="implementation_query" rows="3" required></textarea>
            </div>
            
            <div class="mb-3">
              <label class="form-label">Implementation Details</label>
              <div id="implementationDetails">
                <div class="input-group mb-2">
                  <input type="text" class="form-control" name="implementation_details[]" placeholder="Implementation detail">
                  <button class="btn btn-outline-danger" type="button" onclick="removeDetail(this)">
                    <i class="bi bi-dash"></i>
                  </button>
                </div>
              </div>
              <button type="button" class="btn btn-outline-primary btn-sm" onclick="addImplementationDetail()">
                <i class="bi bi-plus"></i> Add Detail
              </button>
            </div>
            
            <div class="mb-3">
              <label class="form-label">Key Functions</label>
              <div id="keyFunctions">
                <div class="card mb-2">
                  <div class="card-body">
                    <div class="mb-2">
                      <label class="form-label">Function Name</label>
                      <input type="text" class="form-control" name="key_functions[0][name]" placeholder="Function name">
                    </div>
                    <div class="mb-2">
                      <label class="form-label">Description</label>
                      <input type="text" class="form-control" name="key_functions[0][description]" placeholder="Function description">
                    </div>
                    <div class="mb-2">
                      <label class="form-label">Parameters (comma separated)</label>
                      <input type="text" class="form-control" name="key_functions[0][parameters_str]" placeholder="param1, param2">
                    </div>
                    <button type="button" class="btn btn-outline-danger btn-sm" onclick="removeFunction(this)">
                      <i class="bi bi-trash"></i> Remove Function
                    </button>
                  </div>
                </div>
              </div>
              <button type="button" class="btn btn-outline-primary btn-sm" onclick="addKeyFunction()">
                <i class="bi bi-plus"></i> Add Function
              </button>
            </div>
            
            <div class="mb-3">
              <label class="form-label">Dependencies</label>
              <div id="dependencies">
                <div class="input-group mb-2">
                  <input type="text" class="form-control" name="dependencies[]" placeholder="Dependency">
                  <button class="btn btn-outline-danger" type="button" onclick="removeDependency(this)">
                    <i class="bi bi-dash"></i>
                  </button>
                </div>
              </div>
              <button type="button" class="btn btn-outline-primary btn-sm" onclick="addDependency()">
                <i class="bi bi-plus"></i> Add Dependency
              </button>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Add Message</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Dynamic form handling
    let detailCount = 1;
    let functionCount = 1;
    let dependencyCount = 1;
    
    function addImplementationDetail() {
      const html = `
        <div class="input-group mb-2">
          <input type="text" class="form-control" name="implementation_details[]" placeholder="Implementation detail">
          <button class="btn btn-outline-danger" type="button" onclick="removeDetail(this)">
            <i class="bi bi-dash"></i>
          </button>
        </div>
      `;
      document.getElementById('implementationDetails').insertAdjacentHTML('beforeend', html);
      detailCount++;
    }
    
    function removeDetail(button) {
      button.closest('.input-group').remove();
    }
    
    function addKeyFunction() {
      const html = `
        <div class="card mb-2">
          <div class="card-body">
            <div class="mb-2">
              <label class="form-label">Function Name</label>
              <input type="text" class="form-control" name="key_functions[${functionCount}][name]" placeholder="Function name">
            </div>
            <div class="mb-2">
              <label class="form-label">Description</label>
              <input type="text" class="form-control" name="key_functions[${functionCount}][description]" placeholder="Function description">
            </div>
            <div class="mb-2">
              <label class="form-label">Parameters (comma separated)</label>
              <input type="text" class="form-control" name="key_functions[${functionCount}][parameters_str]" placeholder="param1, param2">
            </div>
            <button type="button" class="btn btn-outline-danger btn-sm" onclick="removeFunction(this)">
              <i class="bi bi-trash"></i> Remove Function
            </button>
          </div>
        </div>
      `;
      document.getElementById('keyFunctions').insertAdjacentHTML('beforeend', html);
      functionCount++;
    }
    
    function removeFunction(button) {
      button.closest('.card').remove();
    }
    
    function addDependency() {
      const html = `
        <div class="input-group mb-2">
          <input type="text" class="form-control" name="dependencies[]" placeholder="Dependency">
          <button class="btn btn-outline-danger" type="button" onclick="removeDependency(this)">
            <i class="bi bi-dash"></i>
          </button>
        </div>
      `;
      document.getElementById('dependencies').insertAdjacentHTML('beforeend', html);
      dependencyCount++;
    }
    
    function removeDependency(button) {
      button.closest('.input-group').remove();
    }
  </script>
</body>
</html> 