# Server Configuration
PORT=3000
HOST=localhost
NODE_ENV=development

# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_WEBHOOK_SECRET=your_webhook_secret
GITHUB_AUTO_MERGE=false
