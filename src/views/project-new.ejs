<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create New Project</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div class="container">
    <h1>Create New Project</h1>
    
    <div class="card">
      <div class="card-body">
        <h2>GitHub Repository</h2>
        <form id="githubForm" action="/projects/add" method="POST">
          <%- include('components/repoSelector') %>
          
          <div class="form-group">
            <label for="projectName">Project Name (optional)</label>
            <input type="text" id="projectName" name="projectName" class="form-control" placeholder="Leave blank to use repository name">
          </div>
          
          <div class="form-group">
            <label for="description">Description (optional)</label>
            <textarea id="description" name="description" class="form-control" rows="3" placeholder="Project description"></textarea>
          </div>
          
          <div class="form-check">
            <input type="checkbox" id="initializeTemplates" name="initializeTemplates" class="form-check-input">
            <label class="form-check-label" for="initializeTemplates">Initialize with templates</label>
          </div>
          
          <button type="submit" class="btn btn-primary">Create Project</button>
        </form>
      </div>
    </div>
    
    <div class="card mt-4">
      <div class="card-body">
        <h2>Empty Project</h2>
        <form action="/projects/create-empty" method="POST">
          <div class="form-group">
            <label for="emptyProjectName">Project Name</label>
            <input type="text" id="emptyProjectName" name="projectName" class="form-control" required>
          </div>
          
          <div class="form-group">
            <label for="emptyDescription">Description (optional)</label>
            <textarea id="emptyDescription" name="description" class="form-control" rows="3"></textarea>
          </div>
          
          <button type="submit" class="btn btn-secondary">Create Empty Project</button>
        </form>
      </div>
    </div>
    
    <div class="mt-4">
      <a href="/projects" class="btn btn-link">Back to Projects</a>
    </div>
  </div>
</body>
</html>
