<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Settings - Depla Project Manager</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
  <style>
    .navbar-brand i {
      margin-right: 8px;
    }
    .page-header {
      background: linear-gradient(135deg, #6f42c1 0%, #0275d8 100%);
      color: white;
      padding: 2rem 0;
      margin-bottom: 2rem;
    }
    .settings-card {
      margin-bottom: 1.5rem;
      border-left: 4px solid #6f42c1;
    }
  </style>
</head>
<body>
  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">
        <i class="bi bi-code-square"></i>Depla Project Manager
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">
              <i class="bi bi-house-door"></i> Home
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/projects">
              <i class="bi bi-folder"></i> Projects
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/settings">
              <i class="bi bi-gear"></i> Settings
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Header Section -->
  <header class="page-header">
    <div class="container">
      <h1><i class="bi bi-gear"></i> Settings</h1>
      <p class="lead mb-0">Configure your Depla Project Manager</p>
    </div>
  </header>

  <div class="container">
    <div class="row">
      <div class="col-md-8 mx-auto">
        <!-- General Settings -->
        <div class="card settings-card mb-4">
          <div class="card-header bg-light">
            <h5 class="mb-0"><i class="bi bi-sliders"></i> General Settings</h5>
          </div>
          <div class="card-body">
            <form action="/settings/update" method="POST">
              <div class="mb-3">
                <label for="defaultProjectPath" class="form-label">Default Project Path</label>
                <input type="text" class="form-control" id="defaultProjectPath" name="defaultProjectPath" 
                       value="<%= config.defaultProjectPath || '' %>" placeholder="/path/to/projects">
                <div class="form-text">The default directory where new projects will be created</div>
              </div>
              
              <div class="mb-3">
                <label for="defaultTemplateDir" class="form-label">Template Directory</label>
                <input type="text" class="form-control" id="defaultTemplateDir" name="defaultTemplateDir" 
                       value="<%= config.defaultTemplateDir || '' %>" placeholder="/path/to/templates">
                <div class="form-text">Directory containing project templates</div>
              </div>
              
              <button type="submit" class="btn btn-primary">Save General Settings</button>
            </form>
          </div>
        </div>
        
        <!-- GitHub Integration -->
        <div class="card settings-card mb-4">
          <div class="card-header bg-light">
            <h5 class="mb-0"><i class="bi bi-github"></i> GitHub Integration</h5>
          </div>
          <div class="card-body">
            <form action="/settings/github" method="POST">
              <div class="mb-3">
                <label for="githubToken" class="form-label">GitHub Personal Access Token</label>
                <div class="input-group">
                  <input type="password" class="form-control" id="githubToken" name="githubToken" 
                         value="<%= config.githubToken ? '••••••••••••••••' : '' %>" placeholder="ghp_...">
                  <button class="btn btn-outline-secondary" type="button" id="toggleToken">
                    <i class="bi bi-eye"></i>
                  </button>
                </div>
                <div class="form-text">
                  Used for GitHub repository operations. 
                  <a href="https://github.com/settings/tokens" target="_blank">Create a token</a> with 'repo' scope.
                </div>
              </div>
              
              <div class="mb-3">
                <label for="githubUsername" class="form-label">GitHub Username</label>
                <input type="text" class="form-control" id="githubUsername" name="githubUsername" 
                       value="<%= config.githubUsername || '' %>" placeholder="Your GitHub username">
              </div>
              
              <div class="form-check form-switch mb-3">
                <input class="form-check-input" type="checkbox" id="autoCreateRepo" name="autoCreateRepo" 
                       <%= config.autoCreateRepo ? 'checked' : '' %>>
                <label class="form-check-label" for="autoCreateRepo">
                  Automatically create GitHub repositories for new projects
                </label>
              </div>
              
              <button type="submit" class="btn btn-primary">Save GitHub Settings</button>
            </form>
          </div>
        </div>
        
        <!-- AI Integration -->
        <div class="card settings-card mb-4">
          <div class="card-header bg-light">
            <h5 class="mb-0"><i class="bi bi-cpu"></i> Prompt Automation</h5>
          </div>
          <div class="card-body">
            <form action="/settings/ai" method="POST">
              <div class="mb-3">
                <label for="cursorPosition" class="form-label">Cursor Position</label>
                <div class="input-group mb-2">
                  <input type="text" class="form-control" id="cursorPosition" name="cursorPosition" 
                         value="<%= config.cursorPosition ? config.cursorPosition : '' %>" placeholder="x,y" readonly>
                  <button class="btn btn-primary" type="button" id="captureCursor">
                    <i class="bi bi-cursor"></i> Capture
                  </button>
                </div>
                <div class="form-text">
                  Click "Capture" then click on your screen where prompts should be sent. This is where the cursor will click before sending text.
                </div>
              </div>
              
              <div class="mb-3">
                <label for="promptDelay" class="form-label">Prompt Delay (ms)</label>
                <input type="number" class="form-control" id="promptDelay" name="promptDelay" 
                       value="<%= config.promptDelay || 2000 %>" min="500" max="10000">
                <div class="form-text">Delay between sending consecutive prompts (in milliseconds)</div>
              </div>
              
              <div class="form-check form-switch mb-3">
                <input class="form-check-input" type="checkbox" id="enablePromptAutomation" name="enablePromptAutomation" 
                       <%= config.enablePromptAutomation ? 'checked' : '' %>>
                <label class="form-check-label" for="enablePromptAutomation">
                  Enable prompt automation
                </label>
              </div>
              
              <div class="mb-3">
                <h6>How Prompt Automation Works</h6>
                <p class="text-muted small">
                  Instead of using OpenAI API directly, this system:
                  <ol class="small">
                    <li>Sends template prompts to your chosen cursor position</li>
                    <li>Watches the corresponding GitHub repository for new PRs/branches</li>
                    <li>Auto-merges PRs that contain generated steps (STEPS.md)</li>
                  </ol>
                  This allows you to use any AI service of your choice through its native interface.
                </p>
              </div>
              
              <button type="submit" class="btn btn-primary">Save Prompt Settings</button>
            </form>
          </div>
        </div>
        
        <!-- GitHub Auto-Merge Settings -->
        <div class="card settings-card mb-4">
          <div class="card-header bg-light">
            <h5 class="mb-0"><i class="bi bi-git"></i> GitHub Auto-Merge Settings</h5>
          </div>
          <div class="card-body">
            <form action="/settings/github-automation" method="POST">
              <div class="form-check form-switch mb-3">
                <input class="form-check-input" type="checkbox" id="enableAutoMerge" name="enableAutoMerge" 
                       <%= config.enableAutoMerge ? 'checked' : '' %>>
                <label class="form-check-label" for="enableAutoMerge">
                  Enable auto-merge for step generation PRs
                </label>
              </div>
              
              <div class="mb-3">
                <label for="autoMergeKeywords" class="form-label">Auto-Merge Keywords</label>
                <input type="text" class="form-control" id="autoMergeKeywords" name="autoMergeKeywords" 
                       value="<%= config.autoMergeKeywords || 'generate steps,step generation,implementation plan,steps.md,step-by-step' %>">
                <div class="form-text">Comma-separated keywords to identify step generation PRs for auto-merging</div>
              </div>
              
              <div class="mb-3">
                <label for="pollingInterval" class="form-label">Repository Polling Interval (seconds)</label>
                <input type="number" class="form-control" id="pollingInterval" name="pollingInterval" 
                       value="<%= config.pollingInterval || 60 %>" min="30" max="3600">
                <div class="form-text">How often to check repositories for new PRs and branches</div>
              </div>
              
              <div class="mb-3">
                <h6>Auto-Merge Process</h6>
                <p class="text-muted small">
                  When a PR is detected that contains any of the keywords above or modifies STEPS.md:
                  <ol class="small">
                    <li>The system will automatically merge it into the main branch</li>
                    <li>The STEPS.md file will be parsed to extract implementation phases and components</li>
                    <li>The project status will be updated to reflect the new steps</li>
                  </ol>
                </p>
              </div>
              
              <button type="submit" class="btn btn-primary">Save Auto-Merge Settings</button>
            </form>
          </div>
        </div>
        
        <!-- Advanced Settings -->
        <div class="card settings-card">
          <div class="card-header bg-light">
            <h5 class="mb-0"><i class="bi bi-tools"></i> Advanced Settings</h5>
          </div>
          <div class="card-body">
            <form action="/settings/advanced" method="POST">
              <div class="mb-3">
                <label for="logLevel" class="form-label">Log Level</label>
                <select class="form-select" id="logLevel" name="logLevel">
                  <option value="error" <%= config.logLevel === 'error' ? 'selected' : '' %>>Error</option>
                  <option value="warn" <%= config.logLevel === 'warn' ? 'selected' : '' %>>Warning</option>
                  <option value="info" <%= config.logLevel === 'info' ? 'selected' : '' %>>Info</option>
                  <option value="debug" <%= config.logLevel === 'debug' ? 'selected' : '' %>>Debug</option>
                </select>
              </div>
              
              <div class="mb-3">
                <label for="port" class="form-label">Server Port</label>
                <input type="number" class="form-control" id="port" name="port" 
                       value="<%= config.port || 3000 %>" min="1024" max="65535">
                <div class="form-text">Requires restart to take effect</div>
              </div>
              
              <div class="form-check form-switch mb-3">
                <input class="form-check-input" type="checkbox" id="enableWebhooks" name="enableWebhooks" 
                       <%= config.enableWebhooks ? 'checked' : '' %>>
                <label class="form-check-label" for="enableWebhooks">
                  Enable webhook support
                </label>
              </div>
              
              <button type="submit" class="btn btn-primary">Save Advanced Settings</button>
            </form>
            
            <hr>
            
            <div class="d-flex justify-content-between align-items-center mt-3">
              <button class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#resetModal">
                Reset All Settings
              </button>
              
              <button class="btn btn-outline-secondary" id="exportSettings">
                Export Settings
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Reset Confirmation Modal -->
  <div class="modal fade" id="resetModal" tabindex="-1" aria-labelledby="resetModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="resetModalLabel">Confirm Reset</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p class="text-danger">
            <i class="bi bi-exclamation-triangle"></i> Warning: This will reset all settings to their default values.
          </p>
          <p>This action cannot be undone. Are you sure you want to proceed?</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <form action="/settings/reset" method="POST">
            <button type="submit" class="btn btn-danger">Reset All Settings</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <footer class="bg-dark text-center text-white py-4 mt-5">
    <div class="container">
      <p class="mb-0">Depla Project Manager</p>
      <small class="d-block text-muted">Version 1.0.0</small>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Toggle password visibility
    document.getElementById('toggleToken').addEventListener('click', function() {
      const input = document.getElementById('githubToken');
      const icon = this.querySelector('i');
      
      if (input.type === 'password') {
        input.type = 'text';
        icon.classList.remove('bi-eye');
        icon.classList.add('bi-eye-slash');
      } else {
        input.type = 'password';
        icon.classList.remove('bi-eye-slash');
        icon.classList.add('bi-eye');
      }
    });
    
    // Cursor position capture
    document.getElementById('captureCursor').addEventListener('click', function() {
      const button = this;
      const input = document.getElementById('cursorPosition');
      
      // Change button text to indicate capture mode
      button.innerHTML = '<i class="bi bi-cursor-fill"></i> Click anywhere...';
      button.classList.add('btn-danger');
      
      // Add a global click handler to capture the next click
      const captureHandler = function(e) {
        // Get cursor position
        const x = e.clientX;
        const y = e.clientY;
        
        // Update input value
        input.value = `${x},${y}`;
        
        // Reset button
        button.innerHTML = '<i class="bi bi-cursor"></i> Capture';
        button.classList.remove('btn-danger');
        
        // Save position via AJAX
        fetch('/settings/cursor-position', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ position: `${x},${y}` }),
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            // Show success message
            alert('Cursor position saved successfully!');
          } else {
            alert('Failed to save cursor position: ' + data.error);
          }
        })
        .catch(error => {
          console.error('Error saving cursor position:', error);
          alert('Failed to save cursor position');
        });
        
        // Remove global handler
        document.removeEventListener('click', captureHandler);
        
        // Prevent event from bubbling
        e.stopPropagation();
      };
      
      // Add the handler with a slight delay to avoid capturing the current click
      setTimeout(() => {
        document.addEventListener('click', captureHandler, { once: true });
      }, 100);
    });
    
    // Export settings
    document.getElementById('exportSettings').addEventListener('click', function() {
      fetch('/settings/export')
        .then(response => response.json())
        .then(data => {
          const blob = new Blob([JSON.stringify(data, null, 2)], { type: 'application/json' });
          const url = URL.createObjectURL(blob);
          const a = document.createElement('a');
          a.href = url;
          a.download = 'depla-settings.json';
          document.body.appendChild(a);
          a.click();
          document.body.removeChild(a);
          URL.revokeObjectURL(url);
        })
        .catch(error => {
          console.error('Error exporting settings:', error);
          alert('Failed to export settings');
        });
    });
  </script>
</body>
</html>
